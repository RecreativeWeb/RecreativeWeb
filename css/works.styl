.works
	img
		display block
		width 100%
		height auto
		.avatar
			background-color lightgrey
	article
		padding 2rem 1rem
		.customer
			font-family var(--montserrat)
			text-align left
			font-weight 600
			margin-bottom 1rem
			margin-top 1rem
			.link
				text-decoration none
				color black
				font-weight 900
				&:hover
					font-weight 700
		.versionning
			margin-bottom 1.5rem
			&.cpe
				width 50%
				height auto
		.projectDescription
			position relative
			font-family var(--encode)
			margin-bottom 1rem
			.specificity
				font-weight 600
			.jaune
				position absolute
				bottom -25px
				left -30px
				z-index -10
				width 180px
				height 350px
				background-color var(--yellow-dark)
			.brown
				position absolute
				bottom -25px
				left -30px
				z-index -10
				width 180px
				height 350px
				background-color brown
		.cover
			width 98%
			diplay block
			margin 0 auto 
			border 1px solid silver
			&.cpe
				margin-bottom 1rem
			&.formation
				width 75%
	.trait
		width 20%
		height 1px
		border-top 1px solid black
		margin 0 auto