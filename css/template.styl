*
	margin 0
	padding 0
	outline none
	
html
	font-size 16px
	
body
	position relative
	
header
	width 100%
	position fixed
	z-index 100
	background-color white
	display flex
	justify-content space-around
	align-items center
	-webkit-box-shadow: 0px -12px 40px -2px rgba(115,115,115,1)
	-moz-box-shadow: 0px -12px 40px -2px rgba(115,115,115,1)
	box-shadow: 0px -12px 40px -2px rgba(115,115,115,1)
	
main 
	padding-top 52px
	max-width 1200px;
	margin 0 auto
	
.title
	font-size 1.4rem
	text-align center
	font-weight 600
	font-family var(--montserrat)
	color #282828
	
.subtitle
	font-family var(--encode)
	font-size 1.3rem
	font-weight 400
	text-transform uppercase
	background-color var(--yellow-dark)
	padding .4rem
	text-align center
	width 90%
	margin 1rem auto
	
footer
	width 100%
	background-color cornsilk
	